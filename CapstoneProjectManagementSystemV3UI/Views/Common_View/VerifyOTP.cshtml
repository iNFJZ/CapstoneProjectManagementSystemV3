            </svg>
            Call4Project
        </div>
        <div class="verification">
            <div class="formForgot">

                <div class="intro">
                    <h1>Verification</h1>
                    <p>Please enter the OTP sent to your email</p>
                </div>
                <div id="textError">@TempData["ErrorMessage"]</div>
                <form action="/User/ResetPassword" class="codeOTP">
                    <div class="inputOTP">
                        <input type="text" id="inputNumOTP" name="OTP" class="inputNumOTP" maxlength="6" value=""
                               onkeypress="return event.charCode>=48 && event.charCode<=57" autocomplete="off">
                    </div>
                    <input type="text" name="backupAccount_Id" hidden="hidden" value="@TempData["backupAccount_Id"]" />
                    <div class="buttonVerifiPage">
                        <a href="/User/ForgotPassword" id="backForgotPassPage">Back</a>
                        <button class="button" id="verify" disabled="disabled">Verify</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/common/verification.js"></script>
</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.1.min.js"
