@using Infrastructure.Entities
@model Supervisor

@{
    Layout = "/Views/Shared/Student/_LayoutStudent.cshtml";
    ViewData["Title"] = "Supervisor Detail";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">

<link rel="stylesheet" href="/css/student/student_viewProfileSupervisor.css">
<div class="homepage" id="viewProfile">
    @await Html.PartialAsync("/Views/Shared/Student/_LayoutSidebarLeftStudent.cshtml")
    <div class="main">
        <div class="container">
            <div class="formRequest">
                <p class="formTitle">Detail Profile of Supervisor</p>
            </div>

            <div class="main-body">
                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="@(Url.Content(Model.User.Avatar))" alt="Avatar" class="rounded-circle" width="150">
                                    <div class="mt-3">
                                        <p class="text-secondary mb-1">
                                            <div class="formBasicInfo__name">
                                                <h4><input type="text" value="@Model.User.FullName" id="nameBasicInfo" disabled></h4>
                                            </div>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row" style="align-items: baseline">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">FPT Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <div class="formContactInfo__email">
                                            <div class="informInput">
                                                <input type="text" value="@Model.FeEduEmail" id="emailContactInfo" disabled>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <hr>
                                <div class="row" style="align-items: center">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Persional Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <div class="formContactInfo__email">
                                            <div class="informInput">
                                                <input type="text" value="@Model.PersonalEmail" class="personnalEmail" id="personalEmailContactInfo" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <div class="row" style="align-items: center">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <div class="formContactInfo__phoneNumber">
                                            <div class="informInput">
                                                <input type="text" value="@Model.PhoneNumber" id="phoneContactInfo" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Seft Description</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <div class="formBasicInfo__bio" style="display: block;">
                                            <div style="display: grid; grid-template-columns: 1fr 2fr;align-items: baseline;">
                                            </div>
                                            <div style="text-align: center">
                                                <textarea name="bioInfo" id="bioInfo" cols="55" rows="5"
                                                          disabled>@Model.SelfDescription</textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

