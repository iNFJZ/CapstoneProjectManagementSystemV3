@{
    Layout = "/Views/Shared/DevHead/_LayoutDevHead.cshtml";
    ViewData["Title"] = "Manage Supervisor Page";
}
<link rel="stylesheet" href="/css/supervisor/supervisor_importlistmentor.css">
<div class="homepage" id="manageMentor">
    <div class="settingGroup">
        @await Html.PartialAsync("/Views/Shared/DevHead/_LayoutSidebarLeftDevHead.cshtml")
        <div class="main">
            <div class="settingGroupMain">
                <div class="formRequest">
                    <p class="formTitle">Import Supervisor</p>
                </div>
                @if(ViewBag.Exception != null && ViewBag.Exception.Length != 0)
                {
                    <h2>@ViewBag.Exception</h2>
                }
                @if (ViewBag.AddedSupervisors != null && ViewBag.AddedSupervisors.Count > 0)
                {
                    <h2>Supervisors have been <span>added</span> to the system</h2>
                    <div class="requestMain">
                        <div class="titleRequest">
                            <p>No</p>
                            <p>FPT Email</p>
                            <p>Full Name</p>
                        </div>
                        @{
                            var count = 0;
                        }
                        @foreach (var item in ViewBag.AddedSupervisors)
                        {
                            count++;
                            <div class="informSupportRequest">
                                <p>@count</p>
                                <p>@item.User.FptEmail</p>
                                <p>@item.User.FullName</p>
                            </div>
                        }
                    </div>
                }

                @if (ViewBag.UpdatedSupervisors != null && ViewBag.UpdatedSupervisors.Count > 0)
                {
                    <h2>Supervisors have been <span>updated</span> to the system</h2>
                    <div class="requestMain">
                        <div class="titleRequest">
                            <p>No</p>
                            <p>FPT Email</p>
                            <p>Full Name</p>
                        </div>
                        @{
                            var count = 0;
                        }
                        @foreach (var item in ViewBag.UpdatedSupervisors)
                        {
                            count++;
                            <div class="informSupportRequest">
                                <p>@count</p>
                                <p>@item.User.FptEmail</p>
                                <p>@item.User.FullName</p>
                            </div>
                        }
                    </div>
                }
                @if (ViewBag.errorMessages != null && ViewBag.errorMessages.Count != 0)
                        {
                            <h2>Error lines</h2>
                            <div class="requestMain">
                                <div class="titleRequest">
                                    <p>Line</p>
                                    <p>Error Message</p>
                                </div>
                            @for(int i = 0 ; i < ViewBag.errorMessages.Count ; i++)
                            {
                                <div class="informSupportRequest">
                                    <p>@ViewBag.errorLineNumbers[i]</p>
                                    <span>@ViewBag.errorMessages[i]</span>
                                </div>
                            }
                            </div>
                        }
                
                <form action="/ManageMentor/Index" style="text-align: center; margin-bottom: 10px;">
                    <button type="submit" class="submitFormBtn">Ok</button>
                </form>
            </div>

            
        </div>
    </div>
</div>

<style>
    .settingGroupMain span {
        color: red;
        font-size: 22px;
        font-style: italic;
    }
</style>

