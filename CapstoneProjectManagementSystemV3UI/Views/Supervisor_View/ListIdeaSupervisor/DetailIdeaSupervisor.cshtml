@{
    Layout = "/Views/Shared/Mentor/_LayoutMentor.cshtml";
    ViewData["Title"] = "Idea Detail Page";
}

<link rel="stylesheet" href="/css/supervisor/supervisor_viewIdeaMentorDetail.css">
<script src="/js/student/student_groupDetails.js"></script>

<div class="groupDetails">
    @await Html.PartialAsync("/Views/Shared/Mentor/_LayoutSidebarLeftMentor.cshtml")
    <div class="main">
        <div class="informGroup">
            <div class="formRequest">
                <p class="formTitle">Detail Idea of Other Supervisors</p>
            </div>
            <div class="introGroup">
                <div class="nameProject">
                    @* <img src="@ViewBag.leader.Avatar" alt="Avatar">*@
                    <div class="inforGro">
                        <p>@ViewBag.groupIdeaDetail.ProjectEnglishName</p>
                        @*<p>Project English Name</p>*@

                        <p class="createDate">Created at: @ViewBag.groupIdeaDetail.CreatedAt</p>
                    </div>
                </div>
            </div>
            <div class="someInforms">
                <div class="someInforms--top">
                    <div class="abbreviations">
                        <p class="title">Abbreviations</p>
                        <p class="content">@ViewBag.groupIdeaDetail.Abrrevation</p>
                    </div>
                    <div class="vietnamTitle">
                        <p class="title">Vietnamese Title</p>
                        <p class="content">@ViewBag.groupIdeaDetail.ProjectVietNameseName</p>
                    </div>
                </div>
                <div class="someInforms--bottom">
                    <div class="professional">
                        <p class="title">Profession</p>
                        <div class="doubleNew">
                            @foreach (var u in ViewBag.listProSpe)
                            {
                                <p class="content">@u.Profession.ProfessionFullName</p>
                            }
                        </div>

                    </div>
                    @*<div class="specialty">
                        <p class="title">Specialty</p>
                        <div class="doubleNew">
                            @foreach (var u in ViewBag.listProSpe)
                            {
                                <p class="content">@u.Specialty.SpecialtyFullName</p>
                            }
                        </div>

                    </div>*@
                </div>
            </div>
            <div class="desIdea">
                <p class="title">
                    Description
                </p>
                <p class="content">
                    @ViewBag.groupIdeaDetail.Description
                </p>
            </div>

            <div class="showMember">
                <p class="title">Supervisor</p>

                <div class="members">
                    <div class="showInfomember">
                        <div class="info">

                            <div class="memInfo">
                                <a href="/ViewSupervisorRoleSupervisor/DetailSupervisorWithRoleSupervisor/@ViewBag.groupIdeaDetail.Supervisor.SupervisorID">@ViewBag.groupIdeaDetail.Supervisor.SupervisorID</a>
@*                                <a href="/ViewSupervisorRoleSupervisor/DetailSupervisorWithRoleSupervisor/@ViewBag.groupIdeaDetail.Supervisor.SupervisorID" style="color:blue;margin-left:10px">view profile</a>
*@                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>




</div>