@using Infrastructure.Entities
@model SupervisorDto

@{
    Layout = "/Views/Shared/Mentor/_LayoutMentor.cshtml";
    ViewData["Title"] = "Profile";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">

<link rel="stylesheet" href="/css/supervisor/supervisor_profile.css">
<body>


    <div class="homepage" id="viewProfileSupervisor">
        @await Html.PartialAsync("/Views/Shared/Mentor/_LayoutSidebarLeftMentor.cshtml")
        <div class="main">
            <div class="container">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <img src="@(Url.Content(Model.User.Avatar))" alt="Avatar" class="rounded-circle" width="150">
                                        <div class="mt-3" style="width: 100%;">
                                            <p class="text-secondary mb-1">
                                                <div class="row row1">
                                                    <div class="col-md-3">
                                                        <h6 class="mb-0">Name <span style=" color:red">*</span></h6>
                                                    </div>
                                                    <div class="col-md-9">
                                                        <h4><input type="text" value="@Model.User.FullName" id="nameBasicInfo" disabled></h4>
                                                    </div>
                                                </div>
                                            </p>
                                            <span class="showErrorMessage" id="errornameBasicInfo"></span>
                                            <div style="margin-left: 25%;">
                                                <button class="btn btn-primary editProfile" id="editProfileBtn">Edit Profile</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row row1" style="align-items: baseline">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">FE Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <div class="formContactInfo__email">
                                                <div class="informInput">
                                                    <input type="text" value="@Model.FeEduEmail" id="emailContactInfo" disabled>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row row1" style="align-items: center">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Persional Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <div class="formContactInfo__email">
                                                <div class="informInput">
                                                    <input type="text" value="@Model.PersonalEmail" class="personnalEmail" id="personalEmailContactInfo" disabled>
                                                </div>
                                            </div>
                                            <div class="formContactInfo__email publicForm">
                                                <p class="publicOrNot">Public </p>
                                                <input class="publicButton" type="checkbox" id="checkbox-personalEmail" name="checkbox-personalEmail" value="public" disabled
                                                @if (ViewBag.personalEmailSetting)
                                                {
                                                    <text>checked</text>
                                                }/>
                                            </div>
                                        </div>
                                        <p class="showErrorMessage" id="erroremailPersonContactInfo"></p>

                                        <div class="formContactInfo__email noticeForm">
                                            <P>Personal Email will be required if you don't have <span style=" color:red">FE</span> Email</P>
                                        </div>
                                    </div>
                                    <hr>
                                    @*hh*@
                                    <div class="row row1" style="align-items: center">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Profession<span style=" color:red; margin-left: 5px">*</span></h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <div class="formBasicInfo__name">
                                                <h4>
                                                    @if (Model.Professions != null && Model.Professions.Count > 0)
                                                    {
                                                        <div class="formBasicInfo__professions">
                                                            @for (int i = 0; i < Model.Professions.Count; i++)
                                                            {
                                                                if (Model.Professions[i].Checked == true)
                                                                {
                                                                    <div class="checkbox">
                                                                        <p for="profession">@Model.Professions[i].ProfessionFullName</p>
                                                                        <input class="Profession_Check" type="checkbox" id="profession" name="Professions" disabled value="@Model.Professions[i].ProfessionID"
                                                                        @(Model.Professions[i].Checked == true ? "checked" : "")>
                                                                    </div>
                                                                }

                                                            }
                                                        </div>
                                                    }
                                                </h4>
                                            </div>
                                        </div>
                                        <span class="showErrorMessage" id="errorphoneContactInfo"></span>
                                    </div>
                                    <hr>
                                    <div class="row row1" style="align-items: center">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Phone<span style=" color:red; margin-left: 5px">*</span></h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <div class="formContactInfo__phoneNumber">
                                                <div class="informInput">
                                                    <input type="text" value="@Model.PhoneNumber" id="phoneContactInfo" disabled>
                                                </div>
                                            </div>
                                            <div class="formContactInfo__phoneNumber publicForm">
                                                <p class="publicOrNot">Public </p>
                                                <input class="publicButton" type="checkbox" id="checkbox-phoneNumber" name="checkbox-phoneNumber" value="public" disabled
                                                @if (ViewBag.phoneSetting)
                                                {
                                                    <text>checked</text>
                                                }/>
                                            </div>
                                        </div>
                                        <span class="showErrorMessage" id="errorphoneContactInfo"></span>
                                    </div>
                                    <hr>

                                    <div class="formBasicInfo__gender" style="display:none">
                                        <p class="smallTitle">Gender</p>
                                        @if (@Model.User.Gender == 2)
                                        {
                                            <div class="selectGender">
                                                <input type="radio" id="male" name="genderUser" value="1" disabled>
                                                <label for="male">Male</label><br>
                                                <input type="radio" id="female" name="genderUser" value="0" disabled="disabled">
                                                <label for="female">Female</label><br>
                                                <input type="radio" id="other" name="genderUser" value="2" disabled="disabled" checked>
                                                <label for="other">Other</label>
                                            </div>
                                        }
                                        else if (@Model.User.Gender == 1)
                                        {
                                            <div class="selectGender">
                                                <input type="radio" id="male" name="genderUser" value="1" disabled checked>
                                                <label for="male">Male</label><br>
                                                <input type="radio" id="female" name="genderUser" value="0" disabled="disabled">
                                                <label for="female">Female</label><br>
                                                <input type="radio" id="other" name="genderUser" value="2" disabled="disabled">
                                                <label for="other">Other</label>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="selectGender">
                                                <input type="radio" id="male" name="genderUser" value="1" disabled>
                                                <label for="male">Male</label><br>
                                                <input type="radio" id="female" name="genderUser" value="0" disabled="disabled" checked>
                                                <label for="female">Female</label><br>
                                                <input type="radio" id="other" name="genderUser" value="2" disabled="disabled">
                                                <label for="other">Other</label>
                                            </div>
                                        }
                                    </div>
                                    <div class="formBasicInfo__maxGroup" style="display:none">
                                        <p class="smallTitle">Number of group</p>
                                        <input type="text" value="@Model.MaxGroup" id="maxGroupBasicInfo" disabled />

                                    </div>
                                    <div class="row row1">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Seft Description</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <div class="formBasicInfo__bio" style="display: block;">
                                                <div style="display: grid; grid-template-columns: 1fr 2fr;align-items: baseline;">

                                                    <div class="formBasicInfo__bio publicForm">
                                                        <div style="display: flex;">
                                                            <p class="publicOrNot">Public </p>
                                                            <input class="publicButton" type="checkbox" id="checkbox-selfDescription" name="checkbox-selfDescription" value="public" disabled @if (ViewBag.selfDescriptionSetting)
                                                            {
                                                                <text>checked</text>
                                                            }/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div style="text-align: center">
                                                    <textarea name="bioInfo" id="bioInfo" cols="55" rows="10"
                                                              disabled>@Model.SelfDescription</textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <span class="showErrorMessage" id="errorbioInfo"></span>
                                    </div>
                                    <hr>
                                    <div class="mt-3 button">
                                        <button class="btn btn-primary btnSave">Submit</button>
                                        <button class="btn btn-outline-primary btnCancel">Cancel</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

<script src="/js/supervisor/supervisor_profile.js"></script>