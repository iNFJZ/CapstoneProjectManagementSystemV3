<style>
    /* CSS styles for the popup */
    .popup {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 9999;
    }

    .popup-content {
        position: inherit;
        top: 49%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        max-width: 80%;
        max-height: 80%;
        min-width: 30%;
        overflow-y: auto;
    }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        cursor: pointer;
    }

    .arrowIcon {
        display: inline-block;
        width: 10px;
        height: 10px;
        border-bottom: 2px solid black;
        border-right: 2px solid black;
        transform: rotate(-45deg);
        transition: transform 0.3s ease;
        margin-left: 5px;
        vertical-align: middle;
    }

    .arrowIconRotate {
        transform: rotate(45deg);
    }

