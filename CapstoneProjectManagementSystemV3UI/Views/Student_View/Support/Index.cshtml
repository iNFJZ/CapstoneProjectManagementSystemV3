                            @{
                                var status = support.Status == 1 ? "Processed" : "Pending";
                            }
                            @status
                                </p>
                                <p class="limitCharacter">
                            @{
                                var reply = support.Reply.Equals("") ? "No reply yet" : support.Reply;
                            }
                            @reply
